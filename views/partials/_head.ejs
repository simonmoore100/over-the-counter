<link rel="stylesheet" type="text/css" href="<%= assetPath %>stylesheets/application.css" />
<script src="<%= assetPath %>javascripts/jquery-1.7.2.js" type="text/javascript"></script>
<script src="<%= assetPath %>javascripts/jquery.validate.min.js" type="text/javascript"></script>

<!-- Piwik -->
<% if (typeof transaction !== 'undefined') { %>
<script type="text/javascript">
	var _paq = _paq || [];
	_paq.push(['setDocumentTitle', document.domain + '/' + document.title]);
	_paq.push(['enableLinkTracking']);
	(function() {
		var u = "//web-analytics.fco.gov.uk/piwik/";
		_paq.push(['setTrackerUrl', u + 'piwik.php']);
		_paq.push(['setSiteId', <%= transaction.trackingSiteId() %> ]);
		var d = document,
			g = d.createElement('script'),
			s = d.getElementsByTagName('script')[0];
		g.type = 'text/javascript';
		g.async = true;
		g.defer = true;
		g.src = u + 'piwik.js';
		s.parentNode.insertBefore(g, s);
	})();
</script>
<noscript><p><img src="//web-analytics.fco.gov.uk/piwik/piwik.php?idsite=<%= transaction.trackingSiteId() %>" style="border:0;" alt="" /></p></noscript>
<!-- End Piwik Code -->
<% } %>

